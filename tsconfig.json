{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "app/*": ["app/*"]
    },
    "types": ["jest", "react", "react-native", "node"]
  },
  "include": [
    "app",
    "src",
    "src/types/nativewind.d.ts","types", "jest.setup.ts", "**/*.ts", "**/*.tsx"
  ]
}
